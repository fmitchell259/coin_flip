<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/coin_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/coin_anim_desc"
        app:srcCompat="@drawable/flip_0" />

    <Button
        android:id="@+id/button"
        android:layout_width="201dp"
        android:layout_height="161dp"
        android:layout_alignBottom="@+id/coin_animation"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="325dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/result"
        android:layout_width="319dp"
        android:layout_height="315dp"
        android:layout_alignEnd="@+id/coin_animation"
        android:layout_alignRight="@+id/coin_animation"
        android:layout_alignBottom="@+id/coin_animation"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="251dp"
        android:contentDescription="@string/result_image_descrip"
        app:srcCompat="@android:color/transparent" />


</RelativeLayout>